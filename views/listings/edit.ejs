<% layout("./layouts/boilerplate")-%>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Edit Listing</h3>
    <form
      method="post"
      action="/listings/<%=obj._id%>?_method=PATCH"
      class="needs-validation"
      novalidate
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          name="title"
          placeholder="Title"
          value="<%=obj.title%>"
          class="form-control"
          required
        />

        <div class="invalid-feedback">Please enter valid title</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          required
          rows="5"
          cols="30"
          name="description"
          class="form-control"
        >
        <%=obj.description%></textarea
        >

        <div class="invalid-feedback">Please enter short description</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Img Link</label>
        <input
          type="text"
          name="image"
          value="<%=obj.image%>"
          class="form-control"
          required
        />

        <div class="invalid-feedback">Please enter valid image url</div>
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            type="number"
            name="price"
            value="<%=obj.price%>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter valid price</div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            type="text"
            name="country"
            value="<%=obj.country%>"
            class="form-control"
            required
          />

          <div class="invalid-feedback">Please enter valid country name</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>

        <input
          type="text"
          name="location"
          value="<%=obj.location%>"
          class="form-control"
          required
        />

        <div class="invalid-feedback">Please enter valid location</div>
      </div>

      <button class="btn btn-dark mb-3 edit-btn">Edit Listing</button>
    </form>
  </div>
</div>
