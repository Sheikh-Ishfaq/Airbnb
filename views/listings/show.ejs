<% layout("./layouts/boilerplate")-%>
<body>
  <div class="row card listing-card mt-2">
    <div class="col-8 offset-3">
      <div class="col-8 mb-3"><h3><%=data.title%></h3></div>

      <div class="col-10">
        <img
          src="<%=data.image%>"
          class="card-img-top show-img"
          alt="Listing_image"
        />
      </div>
      <div class="details">
       <p>Owned by <i><%=data.owner.username%> </i></p> 
        
       <p> <div class=""><%=data.description%></div></p>
       <p> <div class="">
          &#8377; <%=data.price.toLocaleString("en-IN")%>
        </div></p>
        <p><div class=""><%=data.location%></div></p>
        <p><div class="mb-3"><%=data.country%></div></p>
      </div>

      <%if(currUser && currUser._id.equals(data.owner._id)){%>
      <div class="buttons">
        <div class="show-edit-btn">
          <form method="get" action="/listings/<%=data._id%>/edit">
            <button class="btn btn-dark">Edit</button>
          </form>
        </div>
        <div class="">
          <form method="post" action="/listings/<%=data._id%>?_method=DELETE">
            <button class="btn btn-dark delete-btn">Delete</button>
          </form>
        </div>
      </div>
      <%}%>
      <hr />
     <%if(currUser){%>
      <div>
        <h4>Leave a review.</h4>
        <form
          action="/listings/<%=data._id%>/reviews"
          method="post"
          class="needs-validation"
          novalidate
        >
          <div class="mt-3">
            <label for="rating" class="form-label">Rating</label>
          </div>
          <div class="mt-2">
            <input
              type="range"
              min="1"
              max="5"
              id="rating"
              name="review[rating]"
              class="form-range"
            />
          </div>
          <div class="mt-2">
            <label for="comment" class="form-label">Comment</label>
          </div>
          <div class="mt-2 mb-3">
            <textarea
              name="review[comment]"
              id="comment"
              class="form-control"
              required
            ></textarea>
            <div class="invalid-feedback">Comment section can't be empty.</div>
          </div>
          <button class="btn btn-outline-dark">Submit</button>
        </form>
      </div>
      <%}%>
      <% if(data.reviews.length){%>
      
      <div class="row mt-3">
        <p><b>All Reviews</b></p>
        <%for(review of data.reviews){%>
        <div class="card col-5 ms-2 mb-2">
          <div class="card-body">
            <h5 class="card-title">@<%=review.author.username%></h5>
            <p class="card-text"><%=review.comment%></p>
            <p class="card-text"><%=review.rating%> Star</p>
            <form
              method="post"
              action="/listings/<%=data._id%>/reviews/<%=review._id%>?_method=DELETE"
            >
              <button class="btn btn-danger btn-sm mb-2">Delete</button>
            </form>
          </div>
        </div>
        <% }%>
      </div>

      <% }%>
    </div>
  </div>
</body>
